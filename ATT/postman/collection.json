{
  "info": {
    "name": "Spring Cloud Demo",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Gateway → Order create",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer <your_jwt>"},
          {"key": "X-Token", "value": "demo-token"}
        ],
        "url": {"raw": "http://localhost/api/order/create?userId=1&productId=1", "protocol": "http", "host": ["localhost"], "path": ["api","order","create"], "query": [{"key":"userId","value":"1"},{"key":"productId","value":"1"}]}
      }
    },
    {
      "name": "Gateway → Product get",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer <your_jwt>"},
          {"key": "X-Token", "value": "demo-token"}
        ],
        "url": {"raw": "http://localhost/api/product/product/1", "protocol": "http", "host": ["localhost"], "path": ["api","product","product","1"]}
      }
    },
    {
      "name": "Order → RocketMQ send",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:8000/event/send?orderId=1", "protocol": "http", "host": ["localhost"], "port":"8000", "path": ["event","send"], "query": [{"key":"orderId","value":"1"}]}
      }
    }
  ]
}

